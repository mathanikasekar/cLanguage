#include<stdio.h>
int main()
{
int i,j,t,n;
printf("enter no of elements");
scanf("%d",&n);
int a[n];
for(i=0;i<n;i++)
{
    printf("enter elements");
    scanf("%d",&a[i]);
}
for(i=0;i<n-1;++i) // no need to take last element
{
    for(j=i+1;j<n;++j) // we take one element and check with all other elements on its right side.
     // so this loop need to go till last element
    {
        if(a[i]>a[j])
        {
            t=a[i];
            a[i]=a[j];
            a[j]=t;
        }
    }
}
printf("elements after sorting");
for(i=0;i<n;++i)
{
    printf("%d ",a[i]);
}
}
