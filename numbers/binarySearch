#include<stdio.h>
#include<string.h>
//recursion
int binarySearch(int a[],int start,int end,int key)
{
    int mid=0;
    if(start>end) //***************************************************************************
    {
        return 0;
    }
    else
    {
        mid=(start+end)/2;
        if(a[mid]==key)
            return mid;
        else if(a[mid]>key)
            binarySearch(a,start,mid-1,key);
        else
            binarySearch(a,mid+1,end,key);
    }
}
//w/o recursion
int binarySearch(int a[],int start,int end,int key)
{
    int mid=0;
    while(start<end) //*****************************************************************************
    {
        mid=(start+end)/2;
        if(a[mid]==key)
            return mid;
        else if(a[mid]>key)
            end=mid-1;
        else
            start=mid+1;
    }
        return 0;
}

int main()
{
int n=10;
int a[10]={12,21,34,47,50,33,75,83,95,10};
int key=33;
printf("%d ",binarySearch(a,0,n,key));
}
