for a single number:

#include <stdio.h>
int main()
{
    int n,i;
    printf("enter a number");
    scanf("%d",&n);
    if(n==1)
     printf("not prime neither composite");
    else
    {

    //this for loops fails for i/p 2,so refer next for loop

    for(i=2;i<n;i++)
    {
        if(n%i==0)
        {
            printf("not prime");
            break;
        }
        else
         printf("prime number");
     }

    or

    int flag=0;
    for(i=1;i<=n;i++)
    {
    if(n%i==0)
    flag++;
    }
    if(flag==2)
    printf("prime number");
    else
    printf("not prime number");

    }

    return 0;
}

for numbers within a range:

//using while loop

#include <stdio.h>
int main()
{
    int i,start,end;
    printf("enter range:");
    scanf("%d %d",&start,&end); // getting range
    printf("prime numbers in range are:");
    while(start<end)
    {
    int flag=0;
    for(i=2;i<start;i++)
    {
        if(start%i==0)
        {
            flag=1;
            break;
        }
    }
        if(flag==0)
        {
         printf("\n%d",start);
        }
    start++;
    }
    return 0;
}

//using for loop

#include <stdio.h>
int main()
{
    int i,itr,start,end;
    printf("enter range:");
    scanf("%d %d",&start,&end);// getting range
    printf("prime numbers in range are:");
    for(itr=start;itr<=end;itr++)
    {
    int flag=0;
    for(i=2;i<itr;i++)
    {
        if(itr%i==0)
        {
            flag=1;
            break;
        }
    }
        if(flag==0)
        {
         printf("\n%d",itr);
        }
    }
    return 0;
}
