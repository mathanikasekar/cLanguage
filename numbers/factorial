factorial program with  recursion :

#include <stdio.h>
int factorial(int n);
int main()
{
    int z=0,n;
    printf("enter number");
    scanf("%d",&n);
    z=factorial(n);
    printf("%d",z);
    return 0;
}
int factorial(int n)
{
    if(n>1)
    return(n*factorial(n-1));
    else
    return 1;
}

factorial program without recursion :

#include <stdio.h>

int main()
{
    int a=1,i,n;
    printf("enter number");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        a=a*i;
    }
    printf("%d",a);
    return 0;
}
