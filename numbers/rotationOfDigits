my code/optimised shrtcut:
shrtcut:
/*
n=5
nor=3
i/p: 1 2 3 4 5 6 7
o/p: 4 5 6 7 1 2 3 //left rot
     5 6 7 1 2 3 4 //right rot
steps:
      split the array into 2 by nor
      1 2 3      4 5 6 7
      left rot:
      3 2 1      4 5 6 7  //rev 1st half
      1 2 3      7 6 5 4  //rev 2nd half
      4 5 6 7 3 2 1       // rev whole array
      right rot:
      7 6 5 4 3 2 1       //rev whole array
      5 6 7     4 3 2 1   //rev 1st half
      5 6 7     1 2 3 4   //rev 2nd half
*/

#include<stdio.h>
void reverse (int *,int,int);
void reverse (int *arr,int start,int end)
{
    int temp;
    for(;start<end;start++,end--)
    {
      temp=arr[start];
      arr[start]=arr[end];
      arr[end]=temp;
    }
}
int main()
{
    int n,nor,arr[100],itr;
    scanf("%d",&n);
    for(itr=0;itr<n;itr++)
        scanf("%d",&arr[itr]);
    scanf("%d",&nor);
    //left rot
    reverse(arr,0,nor-1);
    reverse(arr,nor,n-1);
    reverse(arr,0,n-1);
        for(itr=0;itr<n;itr++)
        printf("%d ",arr[itr]);
        printf("\n");
   //right rot
   reverse(arr,0,n-1);
   reverse(arr,0,nor-1);
   reverse(arr,nor,n-1);
        for(itr=0;itr<n;itr++)
        printf("%d ",arr[itr]);
        printf("\n");
}

my code:
#include<stdio.h>
int main()
{
    long int i,n,t,rem,rem1,sum=0,a[10],x=0,j,rotation;
    printf("Enter number"); //get input
    scanf("%d",&n);
    t=n;
    printf("Enter rotation"); // no of rotations
    scanf("%d",&rotation);

    while(n>0)//reversing i/p as next while loop split digits from last
    {
        rem1=(n%10);
        sum=sum*10+rem1;
        n/=10;
    }

    n=sum; //n value is destroyed so reassigning

    while(n>0)
    {
        rem=n%10;
        a[x++]=rem;//storing in array
        n/=10;
    }
    //left rotation
    x=x-1;//now x is 5 but array value is 0 to 4,to print from reverse we need x value
    for(j=0;j<rotation;j++)
    {
       int last=a[x];
        for(i=x;i>0;i--)
        {
            a[i]=a[i-1];
        }
        a[0]=last;
   }
      printf("left rotation:\n");
      for(i=0;i<=x;i++)
        printf("%d",a[i]);

        //right rotation
     for(j=0;j<rotation;j++)
     {
        int first=a[0];
        for(i=0;i<x;i++)//not i<=x because x is decremented for left shift last position should be empty to place 1st element in last position
        {
            a[i]=a[i+1];
        }
        a[x]=first;
     }
     printf("\nright rotation:\n");
      for(i=0;i<=x;i++)
        printf("%d",a[i]);
}
