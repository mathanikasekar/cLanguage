Write the Program to find the maximum possible sum of index*arr[index] among all rotations of a given array
#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
int rotate(int a[],int n)
{
    int sum=0;
    int i,last=a[n-1];
    for(i=n-1;i>0;i--)
    {
        a[i]=a[i-1];
    }
    a[0]=last;
    for(i=0;i<n;i++)
    {
        sum+=(i*a[i]);
    }
    return sum;
}
int main()
{
   int n,i;
    int sum=0,maxSum=0;
    scanf("%d",&n);
    int a[n];
    for(i=0;i<n;i++)
    {
        scanf("%d ",&a[i]);
    }

    for(i=0;i<n;i++)
    {
      sum=rotate(a,n);
        if(sum>maxSum)
        maxSum=sum;
    }
    printf("%d",maxSum);
    return 0;
}
