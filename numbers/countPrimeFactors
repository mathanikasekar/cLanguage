    long n,i,p,j,a[100],l,f;
    f=0,j=0;
    scanf("%ld",&n);
    for(i=1;i<=n;i++)
    {
        if(n%i==0)
        {
            a[j]=i;
            j++;
        }
    }


    l=j-1;
    if(l==1)
        printf("%ld",n);
    else
        printf("%ld",a[l-j+2]);


                                    OR

     for(i=0;i<j;i++)
    {
        if(i==1)
            printf("%ld",a[i]);
    }


                                    OR

    printf("%ld",a[1]);


    return 0;
}
