//count of prime factors

#include <stdio.h>

int main()
{
    int i, j, num, isPrime,c=0;
    scanf("%d", &num);      // input
    for(i=2; i<=num; i++)
    {
        if(num%i==0)       // factors
        {
            isPrime = 1;
            for(j=2; j<=i/2; j++)  // 2 to half of number
            {
                if(i%j==0)   condition
                {
                    isPrime = 0;     //not prime factor
                    break;
                }
            }
            if(isPrime==1)  // prime factor
            {
                c++;  // count of prime factor
            }
        }
    }
    printf("%d",c);  // output
    return 0;
}

//largest prime factor

#include<stdio.h>
int largestprimefactor(long a)
{
    int i =2 ,largeprimefactor = 2;   //assign     lpf
    while(a!=1)
    {
        if(a%i==0)
        {
        while(a%i==0)
        {
        a = a/i;   // dividing input into half
                if(i>largeprimefactor)
                {
                    largeprimefactor = i;  //storing lpf
                }
        }
        }
        i++;   //while loop increment
    }
     return largeprimefactor;
}
main()
{
     long inputnumber;
     printf("Enter a number");
     scanf("%ld",&inputnumber);   //get input
     printf("%ld",largestprimefactor(inputnumber));
}

