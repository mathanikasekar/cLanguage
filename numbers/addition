#include<stdio.h>
int main()
{
    long a=12,b=10;
    printf("%ld",(a&b)+(a|b));
}


without using arithmetic operator:
#include<stdio.h>
int Add(int x, int y)  //here we store sum,shifted carry in x and y variables
                       //so that it can be easily added in while loop
{
    // iterate till there is no carry,here we are taking bit by bit so a single number has more bits
    while (y != 0)
    {
        x = x ^ y;                     //to add x and y
        int carry = x & y;            // take the carry because in above step just numbers are added
                                      //and there is no space for carry
        y = carry << 1;               //Carry is shifted by one so that adding
                                      // it to x gives the required sum
    }
    return x;
}
int main()
{
    printf("%d", Add(10, 10));
    return 0;
}

with recursion:
#include<stdio.h>
#include<conio.h>
int add(int, int);
main() {
int a,b,sum;
printf("enter two numbers:");
scanf("%d %d",&a,&b);
sum=add(a,b);
printf("%d\n",sum);
}
int add(int a,int b)
{
int sum,carry;
if (b == 0)
return a;
else
sum = a^b;             // add without carrying
carry = (a&b) << 1;    // carry, but donâ€™t add directly shift it bit by bit until it becomes 0
                       //make 1 shift and add 1 bit of carry to sum
return add(sum,carry); // recursion

or

a= a^b;
b = (a&b) << 1;
return add(a,b);
}
