#include<Stdio.h>
struct node
{
    int data;
    int link;
};

void insert(struct node** p,int value) //**p is stores address of head **p value=1000
{
    struct node * new=NULL; //means new address=100 and a single box is created
    new=(struct node*)malloc(sizeof(struct node)); //single box is divided to number of memebers in structure
    new->data=value;
    new->link=NULL;
    if(*p==NULL)//*p=value inside head;p=1000,*p=NULL(value inside head),**p is not valid
        *p=new; //head value becomes 100
    else //some nodes are present
    {
     struct node*temp=*p; //100
     while(temp->link!=NULL) // during looping if it is last node condition fails
     {
         temp=temp->link;
     }
     temp->link=new;
    }
}

void beginning(struct node ** p,int beg_value)//store the present linked list(elements may or may not present) in temp and and append them at end of new node
{
    struct node *new=(struct node*)malloc(sizeof(struct node)); //single box is divided to number of memebers in structure
    new->data=beg_value;
    new->link=NULL;
    struct node *temp=*p;
    *p=new; // making newnode as headnode
    new->link=temp;//appending LL after newnode
}

specificPosition(struct node ** p,int position,int specific_position_value)
{
    struct node *new=(struct node*)malloc(sizeof(struct node)); //single box is divided to number of memebers in structure
    new->data=specific_position_value;
    new->link=NULL;
    struct node *temp=*p;
    struct node *temp1=*p;
    int i,length=0;
    while(temp1!=NULL) //temp!=NULL means it goes to last node,temp->link!=NULL means it go to last before node
    {
       length++;
       temp1=temp1->link;
    }
    //temp=*p;//we should reinitialize here because for finding length temp value goes to end so we get error while appending at any position
    if(position==0)
    {
        *p=new;
        new->link=temp;
    }
    else if(position<length)
    {
    for(i=0;i<position-1;i++)
    {
        temp=temp->link;
    }
    new->link=temp->link;
    temp->link=new;
    }
    else if(position==length)
    {
        for(i=0;i<position-1;i++)
    {
        temp=temp->link;
    }
    new->link=temp->link;
    temp->link=new;
    }
    else
           printf("position not found");
}

