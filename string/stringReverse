#include <stdio.h>
#include <string.h>
#include <stdlib.h>
int main ()
{
     char a[10];
     gets(a);
     int l=strlen(a);
     int i=0,j=l-1;
     for(int i=l-1;i>=0;i--)
     {
         printf("%c",a[i]); // %c is important dont use %s...
     }
    return 0;
}

#include<stdio.h>
#include<string.h>
void reverse(char *str,int begin,int end);
int main()
{
 char s[100],rev[100];
 int i,j,c=0;
 printf("Enter the String\n");
 scanf("%s",s);
 while(s[c]!='\0')
 c++;
 j=c-1;
 for(i=0;i<c;i++)
 {
     rev[i]=s[j];
     j--;
 }
 rev[i]='\0';
 printf("Reversed String is %s\n",rev);
 return 0;
}

#include<stdio.h>
#include<string.h>
int main()
{
char s[20],t;
printf("Enter string");
scanf("%s",&s);
int start=0,end=strlen(s)-1;
while(start<=end)
{
    t=s[start];
    s[start]=s[end];
    s[end]=t;
    start++;
    end--;
}
printf("%s",s);
}

#include <stdio.h>
#include <string.h>
#include <stdlib.h>
int main ()
{
     char a[10];
     gets(a);
     int l=strlen(a);
     int i=0,j=l-1;
     printf("enter size:");
     while(i<j)
     {
     char t;
     t=a[i];
     a[i]=a[j];
     a[j]=t;
     i++;
     j--;
     }
     printf("/n%s",a);
     return 0;
}
