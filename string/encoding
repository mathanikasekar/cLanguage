#include<stdio.h>
int main()
{
   char s[10]="aaaabbbccd"; //string,count in separate array
   char alpha[100]={0};
   int count[100]={0};
   int i,l=10,j,k=0;
   for(i=0;i<l;i++)
   {
       int c=1;
       if(s[i]!='*')
       {
       for(j=i+1;j<l;j++)
       {
       if(s[i]==s[j])
       {
           c++;
           s[j]='*';
       }
       }
       count[k++]=c;
       }
   }
   k=0;
   for(i=0;i<l;i++)
   {
       if(s[i]!='*')
        alpha[k++]=s[i];
   }
   for(i=0;i<k;i++)
   {
    printf("%c %d\n",alpha[i],count[i]);
   }
    return 0;
}
