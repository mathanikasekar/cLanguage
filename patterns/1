#include<stdio.h>
int main()
{
int n=5,r,c,sp;
for(r=1;r<=n;r++,printf("\n"))
{
    for(sp=1;sp<r;sp++,printf(" "));
    for(c=1;c<=n;c++)
    {
        printf("*");
    }}}
